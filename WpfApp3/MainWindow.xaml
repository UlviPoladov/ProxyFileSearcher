<Window x:Class="WpfApp3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp3"
        mc:Ignorable="d"
        Title="File Search App" Height="300" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <Button Content="Select File" Click="SelectFile_Click"/>
            <TextBlock Text="Selected File:" Margin="0,10,0,0"/>
            <TextBlock x:Name="selectedFileText" Margin="0,0,0,10"/>
            <TextBox x:Name="searchTextBox" />
            <Button Content="Submit" Click="Submit_Click" Margin="0,10,0,0"/>
            <ScrollViewer Height="150">
                <StackPanel x:Name="resultStackPanel" Margin="0,10,0,0"/>
            </ScrollViewer>
        </StackPanel>
    </Grid>
</Window>
